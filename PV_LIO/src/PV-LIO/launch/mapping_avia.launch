<launch>
    <!-- Launch file for velodyne16 VLP-16 LiDAR -->

    <arg name="rviz" default="true"/>
    <arg name="debug" default="false"/>

<!--    <rosparam command="load" file="$(find pv_lio)/config/avia_indoor.yaml"/>-->
    <rosparam command="load" file="$(find pv_lio)/config/avia_outdoor.yaml"/>

    <group if="$(eval arg('debug') == False)">
        <node pkg="pv_lio" type="pv_lio_node" name="pv_lio_node" output="screen"/>
    </group>

    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz"
              args="-d $(find pv_lio)/config/rviz_cfg/voxel_mapping.rviz"/>
    </group>

</launch>